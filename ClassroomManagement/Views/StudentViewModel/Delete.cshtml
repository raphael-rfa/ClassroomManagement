@model ClassroomManagement.Models.ViewModel.StudentViewModel

@{
    ViewData["title"] = "Deletar";
}

<form asp-action="Delete">
    <input type="hidden" asp-for="Exam!.ExamId" />
    <input type="hidden" asp-for="Exam!.Student!.Id" />
    <p>Deseja excluir a prova de <b>@Html.DisplayFor(Model => Model.Exam!.Subject!.SubjectName)</b> do aluno <b>@Html.DisplayFor(Model => Model.Exam!.Student!.Name)</b> </p>
    <input type="hidden" asp-for="Exam!.Student!.Name" />
    <input type="hidden" asp-for="Exam!.SubjectId" />
    <input asp-for="Exam!.Score" disabled/>
    <input type="submit" value="Deletar" />
</form>
<a asp-controller="Alunos" asp-action="Details" asp-route-id="@Model.Student!.Id">Voltar</a>
