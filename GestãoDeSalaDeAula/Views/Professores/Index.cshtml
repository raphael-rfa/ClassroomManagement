@model IEnumerable<GestãoDeSalaDeAula.Models.ViewModel.ProfessoresViewModel>

@{
    ViewData["title"] = "Professores";
}

<table>
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Materia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfessorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Materia)
                </td>
                <td>
                    <a asp-action="DeleteConfirm" asp-route-id="@item.Id">Deletar</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
