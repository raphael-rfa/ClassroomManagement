@model GestãoDeSalaDeAula.Models.ViewModel.ProfessorProvas

@{
    ViewData["Title"] = "Detalhes";
}


<div class="textHeader">
    <h1>Detalhes</h1>
</div>

<div>
    <dl class="dl">
        <dt>
            <b>Nome :</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Professores.Name)
        </dd>
        <dt>
            <b>Materia</b>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Materias.MateriasName)
        </dd>
        <dt>
            <b>Boletim</b>
        </dt>
        
        <dd>
            <table class="boletim">
                <tr>
                    <th>Materia</th>
                    <th>Nota</th>
                    <th></th>
                </tr>
                @foreach(var item in Model.Materias.Provas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelitem => item.Aluno.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nota)
                        </td>
                        <td></td>
                    </tr> 
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Voltar ao ranking</a>
</div>